<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RunForgeDesktop.MainPage"
             Title="RunForge Desktop">

    <Grid RowDefinitions="Auto,*,Auto" Padding="24">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <Label
                Text="RunForge Desktop"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="{AppThemeBinding Light=#1E3A5F, Dark=#E0E0E0}"
                SemanticProperties.HeadingLevel="Level1" />
            <Label
                Text="Read-only ML run inspection and export"
                FontSize="14"
                TextColor="{AppThemeBinding Light=#666666, Dark=#999999}"
                SemanticProperties.HeadingLevel="Level2" />
        </VerticalStackLayout>

        <!-- Main Content -->
        <Frame Grid.Row="1"
               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}"
               BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
               CornerRadius="8"
               Padding="24">
            <VerticalStackLayout
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Spacing="16">

                <Label
                    Text="No workspace selected"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}" />

                <Label
                    Text="Select a folder containing RunForge outputs to begin browsing runs."
                    FontSize="14"
                    HorizontalTextAlignment="Center"
                    MaximumWidthRequest="400"
                    TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />

                <Button
                    x:Name="SelectWorkspaceBtn"
                    Text="Select Workspace"
                    Clicked="OnSelectWorkspaceClicked"
                    BackgroundColor="{AppThemeBinding Light=#1E3A5F, Dark=#4A7BA7}"
                    TextColor="White"
                    CornerRadius="4"
                    Padding="24,12"
                    Margin="0,16,0,0"
                    SemanticProperties.Hint="Opens folder picker to select a RunForge workspace" />

            </VerticalStackLayout>
        </Frame>

        <!-- Footer -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,16,0,0">
            <Label Grid.Column="0"
                   Text="v0.1.0 â€” Read-only by design"
                   FontSize="12"
                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center" />
            <Button Grid.Column="1"
                    x:Name="DiagnosticsBtn"
                    Text="Diagnostics"
                    Clicked="OnDiagnosticsClicked"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=#1E3A5F, Dark=#4A7BA7}"
                    FontSize="12"
                    Padding="8,4" />
        </Grid>

    </Grid>

</ContentPage>
