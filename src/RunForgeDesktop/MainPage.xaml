<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RunForgeDesktop.MainPage"
             Title="RunForge Desktop">

    <Grid RowDefinitions="Auto,*,Auto" Padding="24">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <Label
                Text="RunForge Desktop"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="{AppThemeBinding Light=#1E3A5F, Dark=#E0E0E0}"
                SemanticProperties.HeadingLevel="Level1" />
            <Label
                Text="Read-only inspection and export of ML training runs"
                FontSize="14"
                TextColor="{AppThemeBinding Light=#666666, Dark=#999999}"
                SemanticProperties.HeadingLevel="Level2" />
        </VerticalStackLayout>

        <!-- Main Content -->
        <Frame Grid.Row="1"
               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}"
               BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
               CornerRadius="8"
               Padding="32">
            <VerticalStackLayout
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Spacing="24"
                MaximumWidthRequest="500">

                <!-- Welcome message -->
                <Label
                    Text="Welcome"
                    FontSize="22"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}" />

                <Label
                    Text="Select a RunForge workspace to browse training runs, view metrics, and inspect interpretability artifacts."
                    FontSize="14"
                    HorizontalTextAlignment="Center"
                    TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />

                <!-- Primary action -->
                <Button
                    x:Name="SelectWorkspaceBtn"
                    Text="Select Workspace"
                    Clicked="OnSelectWorkspaceClicked"
                    BackgroundColor="{AppThemeBinding Light=#1E3A5F, Dark=#4A7BA7}"
                    TextColor="White"
                    CornerRadius="4"
                    Padding="32,14"
                    FontSize="16"
                    HorizontalOptions="Center"
                    SemanticProperties.Hint="Opens folder picker to select a RunForge workspace" />

                <!-- What is a workspace hint -->
                <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#333333}"
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                       CornerRadius="6"
                       Padding="16"
                       Margin="0,8,0,0">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="What is a RunForge workspace?"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#EEEEEE}" />

                        <Label Text="A folder containing RunForge outputs from training runs. Look for:"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />

                        <VerticalStackLayout Spacing="6" Margin="8,0,0,0">
                            <Label Text="• .runforge/index.json (run index)"
                                   FontSize="12"
                                   FontFamily="Consolas"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#AAAAAA}" />
                            <Label Text="• .runforge/runs/ (run directories)"
                                   FontSize="12"
                                   FontFamily="Consolas"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#AAAAAA}" />
                        </VerticalStackLayout>

                        <Label Text="Runs are created by RunForge CLI or VS Code extension."
                               FontSize="11"
                               TextColor="{AppThemeBinding Light=#888888, Dark=#777777}"
                               Margin="0,4,0,0" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </Frame>

        <!-- Footer -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,16,0,0">
            <Label Grid.Column="0"
                   Text="v0.1.1 — Read-only by design"
                   FontSize="12"
                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center" />
            <Button Grid.Column="1"
                    x:Name="DiagnosticsBtn"
                    Text="Diagnostics"
                    Clicked="OnDiagnosticsClicked"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=#1E3A5F, Dark=#4A7BA7}"
                    FontSize="12"
                    Padding="8,4"
                    ToolTipProperties.Text="View app and workspace diagnostic information" />
        </Grid>

    </Grid>

</ContentPage>
