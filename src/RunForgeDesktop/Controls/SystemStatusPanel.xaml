<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:services="clr-namespace:RunForgeDesktop.Core.Services;assembly=RunForgeDesktop.Core"
             x:Class="RunForgeDesktop.Controls.SystemStatusPanel">

    <Frame Padding="12"
           CornerRadius="8"
           Margin="0,8"
           BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#252525}"
           BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}">

        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
            <!-- Status Icon -->
            <Label Grid.Column="0"
                   x:Name="StatusIcon"
                   FontSize="20"
                   VerticalOptions="Center" />

            <!-- Status Text -->
            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                <Label x:Name="StatusTitle"
                       FontSize="14"
                       FontAttributes="Bold" />
                <Label x:Name="StatusSubtitle"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
            </VerticalStackLayout>
        </Grid>

    </Frame>

</ContentView>
