<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RunForgeDesktop.Views.HelpPage"
             Title="Help"
             BackgroundColor="{AppThemeBinding Light=#F5F7FA, Dark=#121317}">

    <ScrollView Padding="32,24">
        <VerticalStackLayout Spacing="24" MaximumWidthRequest="800">

            <!-- Header -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Welcome to RunForge"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#1A1A2E, Dark=#FFFFFF}" />
                <Label Text="Your companion for machine learning experiments"
                       FontSize="16"
                       TextColor="{AppThemeBinding Light=#64748B, Dark=#94A3B8}" />
            </VerticalStackLayout>

            <!-- Quick Start Card -->
            <Border BackgroundColor="{AppThemeBinding Light=#EEF2FF, Dark=#1E1B4B}"
                    Stroke="{AppThemeBinding Light=#C7D2FE, Dark=#3730A3}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="24">
                <VerticalStackLayout Spacing="16">
                    <Label Text="âš¡ Quick Start"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#4338CA, Dark=#A5B4FC}" />

                    <Label TextColor="{AppThemeBinding Light=#4338CA, Dark=#C7D2FE}"
                           FontSize="14"
                           LineHeight="1.6">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="1. " FontAttributes="Bold" />
                                <Span Text="Go to " />
                                <Span Text="Dashboard" FontAttributes="Bold" />
                                <Span Text=" and click " />
                                <Span Text="Select Workspace" FontAttributes="Bold" />
                                <Span Text=" to choose where your experiments will be saved" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label TextColor="{AppThemeBinding Light=#4338CA, Dark=#C7D2FE}"
                           FontSize="14"
                           LineHeight="1.6">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="2. " FontAttributes="Bold" />
                                <Span Text="Switch to the " />
                                <Span Text="Runs" FontAttributes="Bold" />
                                <Span Text=" tab and click " />
                                <Span Text="Train" FontAttributes="Bold" />
                                <Span Text=" to start your first experiment" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label TextColor="{AppThemeBinding Light=#4338CA, Dark=#C7D2FE}"
                           FontSize="14"
                           LineHeight="1.6">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="3. " FontAttributes="Bold" />
                                <Span Text="Watch your model train in real-time with live loss charts!" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Border>

            <!-- What is RunForge -->
            <Border BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E2028}"
                    Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#2D3748}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="24">
                <VerticalStackLayout Spacing="16">
                    <Label Text="What is RunForge?"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#F3F4F6}" />

                    <Label Text="RunForge is a desktop application that makes machine learning accessible. Instead of wrestling with command lines and scripts, you can:"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                           LineHeight="1.6" />

                    <VerticalStackLayout Spacing="12" Margin="16,0,0,0">
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="âœ“" FontSize="16" TextColor="{AppThemeBinding Light=#22C55E, Dark=#4ADE80}" FontAttributes="Bold" />
                            <Label Text="Train neural networks with a few clicks"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="12">
                            <Label Text="âœ“" FontSize="16" TextColor="{AppThemeBinding Light=#22C55E, Dark=#4ADE80}" FontAttributes="Bold" />
                            <Label Text="Monitor training progress with live charts"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="12">
                            <Label Text="âœ“" FontSize="16" TextColor="{AppThemeBinding Light=#22C55E, Dark=#4ADE80}" FontAttributes="Bold" />
                            <Label Text="Experiment with different settings to find what works best"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="12">
                            <Label Text="âœ“" FontSize="16" TextColor="{AppThemeBinding Light=#22C55E, Dark=#4ADE80}" FontAttributes="Bold" />
                            <Label Text="Keep all your experiments organized in one place"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Understanding the Tabs -->
            <Border BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E2028}"
                    Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#2D3748}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="24">
                <VerticalStackLayout Spacing="20">
                    <Label Text="Understanding the Tabs"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#F3F4F6}" />

                    <!-- Dashboard -->
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Border BackgroundColor="{AppThemeBinding Light=#DBEAFE, Dark=#1E3A8A}"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6"
                                    Padding="8,4">
                                <Label Text="Dashboard"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1E40AF, Dark=#93C5FD}" />
                            </Border>
                        </HorizontalStackLayout>
                        <Label Text="Your home base. This is where you select your workspace â€” a folder on your computer where all your experiments and their results will be saved. Think of it like choosing a project folder."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                               LineHeight="1.6" />
                    </VerticalStackLayout>

                    <!-- Runs -->
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Border BackgroundColor="{AppThemeBinding Light=#DCFCE7, Dark=#14532D}"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6"
                                    Padding="8,4">
                                <Label Text="Runs"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#166534, Dark=#86EFAC}" />
                            </Border>
                        </HorizontalStackLayout>
                        <Label Text="Where the action happens! View all your training experiments, start new ones with the Train button, or run multiple experiments at once with MultiRun. Each 'run' is one training session with specific settings."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                               LineHeight="1.6" />
                    </VerticalStackLayout>

                    <!-- Help -->
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Border BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#78350F}"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6"
                                    Padding="8,4">
                                <Label Text="Help"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#92400E, Dark=#FCD34D}" />
                            </Border>
                        </HorizontalStackLayout>
                        <Label Text="You're here! This guide explains how everything works."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                               LineHeight="1.6" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Training Basics -->
            <Border BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E2028}"
                    Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#2D3748}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="24">
                <VerticalStackLayout Spacing="20">
                    <Label Text="Training Basics (No PhD Required!)"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#F3F4F6}" />

                    <Label Text="When you train a model, you're teaching a computer to recognize patterns. Here are the key terms you'll see:"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                           LineHeight="1.6" />

                    <!-- Epochs -->
                    <Grid ColumnDefinitions="120,*" RowSpacing="16">
                        <Label Text="Epochs"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#6366F1, Dark=#818CF8}" />
                        <Label Grid.Column="1"
                               Text="How many times the model looks at all your data. More epochs = more learning time, but too many can cause 'overfitting' (memorizing instead of learning)."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                               LineHeight="1.5" />

                        <Label Grid.Row="1"
                               Text="Batch Size"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#6366F1, Dark=#818CF8}" />
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="How many examples the model looks at before updating itself. Larger batches are faster but use more memory. Common values: 32, 64, or 128."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                               LineHeight="1.5" />

                        <Label Grid.Row="2"
                               Text="Learning Rate"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#6366F1, Dark=#818CF8}" />
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="How big of a step the model takes when learning. Too high = unstable, too low = painfully slow. Start with 0.001 and adjust from there."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                               LineHeight="1.5" />

                        <Label Grid.Row="3"
                               Text="Loss"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#6366F1, Dark=#818CF8}" />
                        <Label Grid.Row="3" Grid.Column="1"
                               Text="A number showing how wrong the model is. Lower is better! You want to see this go down over time. If it goes up, something's off."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                               LineHeight="1.5" />

                        <Label Grid.Row="4"
                               Text="GPU vs CPU"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#6366F1, Dark=#818CF8}" />
                        <Label Grid.Row="4" Grid.Column="1"
                               Text="GPUs (graphics cards) are much faster for training. If you have an NVIDIA GPU, use it! CPU works but is slower."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                               LineHeight="1.5" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- MultiRun Explained -->
            <Border BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E2028}"
                    Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#2D3748}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="24">
                <VerticalStackLayout Spacing="16">
                    <Label Text="MultiRun: Finding the Best Settings"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#F3F4F6}" />

                    <Label Text="Not sure which settings work best? MultiRun lets you try multiple combinations automatically!"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                           LineHeight="1.6" />

                    <Label Text="For example, you could test:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}" />

                    <Border BackgroundColor="{AppThemeBinding Light=#F9FAFB, Dark=#0F172A}"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 8"
                            Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="â€¢ Learning rates: 0.001, 0.0001"
                                   FontSize="13"
                                   FontFamily="Consolas"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#D1D5DB}" />
                            <Label Text="â€¢ Batch sizes: 32, 64"
                                   FontSize="13"
                                   FontFamily="Consolas"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#D1D5DB}" />
                            <Label Text="â€¢ Optimizers: Adam, SGD"
                                   FontSize="13"
                                   FontFamily="Consolas"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#D1D5DB}" />
                        </VerticalStackLayout>
                    </Border>

                    <Label Text="This creates 8 experiments (2 Ã— 2 Ã— 2). RunForge runs them all and tells you which combination performed best!"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                           LineHeight="1.6" />
                </VerticalStackLayout>
            </Border>

            <!-- Tips -->
            <Border BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#1C1917}"
                    Stroke="{AppThemeBinding Light=#FDE68A, Dark=#44403C}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="24">
                <VerticalStackLayout Spacing="16">
                    <Label Text="ðŸ’¡ Pro Tips"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#92400E, Dark=#FCD34D}" />

                    <VerticalStackLayout Spacing="12">
                        <Label TextColor="{AppThemeBinding Light=#78350F, Dark=#FEF3C7}"
                               FontSize="14"
                               LineHeight="1.6">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Start small: " FontAttributes="Bold" />
                                    <Span Text="Begin with fewer epochs (5-10) to make sure everything works before doing longer runs." />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label TextColor="{AppThemeBinding Light=#78350F, Dark=#FEF3C7}"
                               FontSize="14"
                               LineHeight="1.6">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Watch the loss curve: " FontAttributes="Bold" />
                                    <Span Text="A good training shows loss going down steadily. Spikes or flat lines might mean you need to adjust settings." />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label TextColor="{AppThemeBinding Light=#78350F, Dark=#FEF3C7}"
                               FontSize="14"
                               LineHeight="1.6">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Use Diagnostics: " FontAttributes="Bold" />
                                    <Span Text="Access it from the Dashboard to check your Python setup and manage storage." />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label TextColor="{AppThemeBinding Light=#78350F, Dark=#FEF3C7}"
                               FontSize="14"
                               LineHeight="1.6">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Settings are your friend: " FontAttributes="Bold" />
                                    <Span Text="Set your preferred defaults (device, epochs, etc.) so new runs start with your favorite configuration." />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Requirements -->
            <Border BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E2028}"
                    Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#2D3748}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="24">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Requirements"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#F3F4F6}" />

                    <Label Text="RunForge needs Python installed on your computer to run the actual training. Here's what you need:"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}"
                           LineHeight="1.6" />

                    <VerticalStackLayout Spacing="8" Margin="16,0,0,0">
                        <Label Text="â€¢ Python 3.10 or newer"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}" />
                        <Label Text="â€¢ PyTorch (install with: pip install torch)"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}" />
                        <Label Text="â€¢ For GPU: NVIDIA GPU with CUDA support"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}" />
                    </VerticalStackLayout>

                    <Label Text="RunForge will automatically find Python on your system. If it can't find it, you can manually set the path in Settings."
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                           FontAttributes="Italic"
                           LineHeight="1.6" />
                </VerticalStackLayout>
            </Border>

            <!-- Footer -->
            <VerticalStackLayout Spacing="8" Margin="0,16,0,0">
                <Label Text="RunForge Desktop"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                       HorizontalOptions="Center" />
                <Label Text="Made with â™¥ for the ML community"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
