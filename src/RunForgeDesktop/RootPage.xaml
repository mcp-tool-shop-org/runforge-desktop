<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RunForgeDesktop"
             xmlns:controls="clr-namespace:RunForgeDesktop.Controls"
             x:Class="RunForgeDesktop.RootPage"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Row 0: Global Activity Strip -->
        <controls:ActivityStrip Grid.Row="0"
                                x:Name="ActivityStripControl" />

        <!-- Row 1: Main Application Shell (injected via code-behind) -->
        <ContentView Grid.Row="1"
                     x:Name="ShellContainer" />
    </Grid>

</ContentPage>
