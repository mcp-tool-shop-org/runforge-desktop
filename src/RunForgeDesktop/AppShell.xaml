<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RunForgeDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RunForgeDesktop"
    xmlns:views="clr-namespace:RunForgeDesktop.Views"
    Title="RunForge Desktop"
    Shell.FlyoutBehavior="Disabled">

    <!-- Dashboard is the startup page -->
    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:WorkspaceDashboardPage}"
        Route="dashboard" />

</Shell>
