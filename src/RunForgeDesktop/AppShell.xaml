<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RunForgeDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RunForgeDesktop"
    xmlns:views="clr-namespace:RunForgeDesktop.Views"
    Title="RunForge Desktop"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <!-- Dashboard Tab -->
        <Tab Title="Dashboard">
            <ShellContent
                Title="Dashboard"
                ContentTemplate="{DataTemplate views:WorkspaceDashboardPage}"
                Route="dashboard" />
        </Tab>

        <!-- Training Runs Tab -->
        <Tab Title="Runs">
            <ShellContent
                Title="Runs"
                ContentTemplate="{DataTemplate views:RunsDashboardPage}"
                Route="runs" />
        </Tab>

        <!-- Help Tab -->
        <Tab Title="Help">
            <ShellContent
                Title="Help"
                ContentTemplate="{DataTemplate views:HelpPage}"
                Route="help" />
        </Tab>

        <!-- Settings Tab -->
        <Tab Title="Settings">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate views:SettingsPage}"
                Route="settings" />
        </Tab>
    </TabBar>

</Shell>
