<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Theme-aware control styles -->

    <!-- Card/Panel Border Style -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface1}" />
        <Setter Property="Stroke" Value="{DynamicResource Outline}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Elevated Card Style (Surface2) -->
    <Style x:Key="ElevatedCardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface2}" />
        <Setter Property="Stroke" Value="{DynamicResource Outline}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Activity Strip Style -->
    <Style x:Key="ActivityStripStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource StripBackground}" />
        <Setter Property="Stroke" Value="{DynamicResource StripBorder}" />
        <Setter Property="StrokeThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="HeightRequest" Value="28" />
    </Style>

    <!-- Status Pill Style -->
    <Style x:Key="StatusPillStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource PillBackground}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Primary Label (default text) -->
    <Style x:Key="PrimaryLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextPrimary}" />
    </Style>

    <!-- Secondary Label (muted text) -->
    <Style x:Key="SecondaryLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextSecondary}" />
    </Style>

    <!-- Muted Label (very subtle) -->
    <Style x:Key="MutedLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextMuted}" />
        <Setter Property="FontSize" Value="11" />
    </Style>

    <!-- Primary Button -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Accent}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Secondary Button (outline/ghost) -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{DynamicResource Accent}" />
        <Setter Property="BorderColor" Value="{DynamicResource Outline}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <!-- Danger Button -->
    <Style x:Key="DangerButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Danger}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Success Button -->
    <Style x:Key="SuccessButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Success}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="14" />
    </Style>

</ResourceDictionary>
